<?xml version='1.0' encoding='utf-8'?>
<widget id="iot.zanetti.br" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Iot-Z</name>
    <description>
        aplicatico voltado para internet das coisas
    </description>
    <author email="gabrielzanetti2012@gmail.com" href="http://www.zanettiautomarketing.com.br">
        Gabriel lorencao Zanetti
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/icone/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/android/icone/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/android/icone/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/android/icone/icon-96-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
  
</widget>

